---
interface Props {
  tags: string[];
}
const { tags } = Astro.props;
---

<div class="tags">
  {
    tags.map((tag: string) => (
      <p>
        <a class="button" href={`/tags/${tag}`}>
          {tag}
        </a>
      </p>
    ))
  }
</div>

<style>
  .tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
</style>
