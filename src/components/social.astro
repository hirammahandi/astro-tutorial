---
interface Props {
  platform: string;
  username: string;
}
// @note this the way to pass props for astro component
const { platform, username } = Astro.props;
---

<a
  class="button button-primary"
  href={`https://www.${platform}.com/${username}`}
  target="_blank">{platform}</a
>

